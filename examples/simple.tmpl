{{- with endpoints "default" "tiller-deploy" }}
servers:
{{- range .Subsets }}
{{- $ports := .Ports }}
{{- range .Addresses }}
{{- $ip := .IP }}
{{- range $ports }}
  - {{ $ip }}:{{ .Port }}
{{- end }}
{{- end }}
{{- end }}
{{- end }}

{{- with pods "default" "name=tiller" }}
servers:
{{- range .Items }}
  - {{ .Name }} with IP {{ .Status.PodIP }} with status {{ .Status.Phase }}
{{- end }}
{{- end }}